<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".calculatrice">


    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1pt"
        android:layout_weight="1"
        android:background="#E9E4E4"
        android:ems="10"
        android:gravity="right|center"
        android:inputType="textPersonName"
        android:text="0"
        android:textSize="60sp" />


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="458dp"
        android:layout_weight="1">

        <TableRow


            android:layout_width="match_parent"
            android:layout_height="130dp">

            <Button
                android:id="@+id/buttonAC"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="122dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#F77402"
                android:backgroundTint="#867D7D"
                android:orientation="vertical"
                android:text="AC"
                android:onClick="acEvent"
                android:textSize="36sp"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/buttonmod"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="122dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:backgroundTint="#877E7E"
                android:orientation="vertical"
                android:text="%"
                android:onClick="percentEvent"
                android:textSize="36sp"
                android:textColor="#FFF"


            <Button
                android:id="@+id/buttonplusoumoin"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="148dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#EBE8E8"
                android:backgroundTint="#887F7F"
                android:orientation="vertical"
                android:text="+/-"
                android:onClick="numberEvent"
                android:textSize="36sp"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/buttondiv"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="148dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FF9902"
                android:orientation="vertical"
                android:text="/"
                android:onClick="operatorEvent"
                android:textSize="36sp"
                android:textColor="#FFF"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <Button
                android:id="@+id/button7"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="148dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical"
                android:text="7"
                android:onClick="numberEvent"
                android:textSize="36sp"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/button8"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="148dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical"
                android:text="8"
                android:onClick="numberEvent"
                android:textSize="36sp"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/button9"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="148dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical"
                android:text="9"
                android:onClick="numberEvent"
                android:textSize="36sp"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/buttonmtp"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="148dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FF9800"
                android:orientation="vertical"
                android:text="*"
                android:onClick="operatorEvent"
                android:textSize="36sp"
                android:textColor="#FFF"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <Button
                android:id="@+id/button4"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical"
                android:text="4"
                android:onClick="numberEvent"
                android:textSize="36sp"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/button5"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="148dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical"
                android:text="5"
                android:onClick="numberEvent"
                android:textSize="36sp"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/button6"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="148dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical"
                android:text="6"
                android:onClick="numberEvent"
                android:textSize="36sp"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/buttonsous"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="148dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FF9800"
                android:orientation="vertical"
                android:text="-"
                android:onClick="operatorEvent"
                android:textSize="36sp"
                android:textColor="#FFF"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button1"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="123dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical"
                android:text="1"
                android:onClick="numberEvent"
                android:textSize="36sp"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/button2"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical"
                android:text="2"
                android:onClick="numberEvent"
                android:textSize="36sp"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/button3"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical"
                android:text="3"
                android:onClick="numberEvent"
                android:textSize="36sp"
                android:textColor="#FFF"/>

            <Button
                android:id="@+id/buttonadd"
                android:layout_marginRight="1pt"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginBottom="1pt"
                android:layout_width="148dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:background="#FF9800"
                android:orientation="vertical"
                android:text="+"
                android:onClick="operatorEvent"
                android:textSize="36sp"
                android:textColor="#FFF"/>
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/button0"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical"
                android:text="0"
                android:onClick="numberEvent"
                android:textColor="#FFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buttonvirg"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical"
                android:text=","
                android:onClick="numberEvent"
                android:textColor="#FFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/buttonegal"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_marginLeft="1pt"
                android:layout_marginTop="1pt"
                android:layout_marginRight="1pt"
                android:layout_marginBottom="1pt"
                android:layout_weight="1"
                android:background="@color/cardview_dark_background"
                android:orientation="vertical"
                android:text="="
                android:onClick="equalEvent"
                android:textColor="#FFF"
                android:textSize="36sp" />

        </TableRow>

    </TableLayout>




</LinearLayout>